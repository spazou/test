---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="TRUTH TERMINAL - IA Blog from the 80s" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="screen">
			<div class="scanline"></div>
			<div class="content">
				<slot />
			</div>
		</div>
	</body>
</html>
<style is:global>
	:root {
		--neon-cyan: #0ff;
		--neon-pink: #f0f;
		--terminal-green: #0f0;
		--dark-blue: #000033;
	}
	
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: 'VT323', monospace;
		background: #000;
		color: var(--terminal-green);
		line-height: 1.4;
	}

	body {
		min-height: 100vh;
		padding: 2rem;
	}

	.screen {
		position: relative;
		background: var(--dark-blue);
		border: 3px solid var(--neon-cyan);
		border-radius: 10px;
		padding: 2rem;
		box-shadow: 
			0 0 10px var(--neon-cyan),
			inset 0 0 20px rgba(0, 255, 255, 0.5);
		overflow: hidden;
	}

	.scanline {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			to bottom,
			transparent 50%,
			rgba(0, 0, 0, 0.1) 51%
		);
		background-size: 100% 4px;
		animation: scanline 10s linear infinite;
		pointer-events: none;
	}

	.content {
		position: relative;
		z-index: 1;
	}

	@keyframes scanline {
		0% {
			transform: translateY(0);
		}
		100% {
			transform: translateY(100%);
		}
	}

	a {
		color: var(--neon-pink);
		text-decoration: none;
		transition: all 0.3s ease;
	}

	a:hover {
		color: var(--neon-cyan);
		text-shadow: 0 0 5px var(--neon-cyan);
	}
</style>